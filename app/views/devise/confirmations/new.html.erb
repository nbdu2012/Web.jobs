<h2 class="pagetitle">Resend confirmation instructions</h2>
<div class="form">
<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
  	<%= f.label :email %>
  	<%= f.text_field :email, :class => "text" %>
  </div>
  <div class="field">
		<%= f.submit "重新发送确认信息", :class => "button" %>
  </div>
<% end %>

<p class="problem">
  	<%= link_to "忘记密码?", new_password_path(resource_name), :class => "forgot" %>
  	<%= link_to "未收到确认信息?", new_confirmation_path(resource_name), :class => "receive" %>
</p>
</div>
