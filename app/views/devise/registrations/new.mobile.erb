<div data-role="page" class="devise-registration-new">
  <header data-role="header">
    <h1>注册</h1>
  </header>

  <div data-role="content">
    <%= render :partial => "devise/shared/flash", :object => flash %>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <p>
        <%= f.label :email , t("user.email") %><br />
        <%= f.text_field :email %>
      </p>
    
      <p>
        <%= f.label :password , t("user.password") %><br />
        <%= f.password_field :password %>
      </p>
    
      <p>
        <%= f.label :password_confirmation , t("user.password_confirmation") %><br />
        <%= f.password_field :password_confirmation %>
      </p>

      <p>
        <%= f.submit "注册" %>
      </p>
    <% end %>
      
    <%= render :partial => "devise/shared/links" %>
  </div>
</div>
