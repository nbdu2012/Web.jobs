<dl title="job detail">
  <dt><%= t("job.posted") %></dt>
  <dd><%= job.created_at.to_date %></dd>

  <% if job.deadline %>
  <dt><%= t("job.deadline") %></dt>
  <dd><%= job.deadline %></dd>
  <% end %>

  <dt><%= t("job.type") %></dt>
  <dd><%= job.job_type %></dd>

  <dt><%= t("job.occupation") %></dt>
  <dd><%= job.occupation%></dd>

  <dt><%= t("job.company_name") %></dt>
  <dd><%= job.company_name%></dd>

  <dt><%= t("job.location") %></dt>
  <dd><%= job.location%></dd>

  <% unless job.url.blank? %>
  <dt>URL</dt>
  <dd><%= auto_link job.url, :target => "_blank" %></dd>
  <% end %>

  <dt><%= t("job.description") %></dt>
  <dd><%= simple_format job.description %></dd>

  <dt><%= t("job.apply_information") %></dt>
  <dd><%= simple_format job.apply_information %></dd>
</dl>
