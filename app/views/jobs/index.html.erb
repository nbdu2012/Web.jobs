
<p class="post-job clearfix"><%= link_to t(:faq), new_job_path, :title => t("post_a_new_job") %></p>

<table cellspacing="0" class="joblist">
    <thead>
	<tr>
		<th><%= t("job.posted") %></th>
		<th><%= t("job.title") %></th>
		<th><%= t("job.company_name") %></th>
		<th><%= t("job.location") %></th>
	</tr>
	</thead>
	<tbody>	
	<% @jobs.each do |job| %>
		<tr>
			<td><%= job.created_at.to_date %></td>
      <% if user_signed_in? %>
  			<td><%= link_to job.title, job_path(job) %></td>
      <% else %>
  			<td><%= job.title %></td>
      <% end %>
			<td><%= job.company_name %></td>
			<td><%= job.location %></td>
		</tr>
	<% end %>
    </tbody>
</table>
<span class="paperclip"></span>
